@{
    ViewData["Title"] = "Welcome";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light">
        <div class="col-md-8 p-lg-5 mx-auto my-5">
            <h1 class="display-4 fw-bold">Product Tracking System</h1>
            <p class="lead fw-normal">
                Efficiently manage your products and track orders in real-time.
                Join our platform to streamline your business operations.
            </p>
            @if (!User.Identity?.IsAuthenticated ?? false)
            {
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 me-sm-3">Get Started</a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4">Sign In</a>
                </div>
            }
            else
            {
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg px-4">View Products</a>
                    <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-secondary btn-lg px-4">My Orders</a>
                </div>
            }
        </div>
    </div>

    <!-- Features Section -->
    <div class="container px-4 py-5">
        <h2 class="pb-2 border-bottom">Key Features</h2>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            <div class="col d-flex align-items-start">
                <div class="icon-square bg-light text-dark flex-shrink-0 me-3">
                    <i class="bi bi-box fs-4"></i>
                </div>
                <div>
                    <h3>Product Management</h3>
                    <p>Easily manage your product inventory with detailed tracking and categorization.</p>
                </div>
            </div>
            <div class="col d-flex align-items-start">
                <div class="icon-square bg-light text-dark flex-shrink-0 me-3">
                    <i class="bi bi-cart-check fs-4"></i>
                </div>
                <div>
                    <h3>Order Tracking</h3>
                    <p>Track orders in real-time and manage their status efficiently.</p>
                </div>
            </div>
            <div class="col d-flex align-items-start">
                <div class="icon-square bg-light text-dark flex-shrink-0 me-3">
                    <i class="bi bi-people fs-4"></i>
                </div>
                <div>
                    <h3>User Management</h3>
                    <p>Robust user management with role-based access control.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .icon-square {
            width: 3rem;
            height: 3rem;
            border-radius: .75rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}
