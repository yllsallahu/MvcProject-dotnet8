@{
    ViewBag.Title = "Orders";
}

<h1>Orders</h1>

<form method="get" asp-action="Index">
    <input type="text" name="searchName" value="@ViewBag.SearchName" placeholder="Search by name..." />
    <button type="submit">Filter</button>
    <a asp-action="Index">Clear</a>
</form>

<table>
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewBag.SortOrder == "name_desc" ? "" : "name_desc")">
                    Name
                </a>
            </th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="3">No orders found.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    Page @ViewBag.CurrentPage of @ViewBag.TotalPages
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
    }
    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
    }
</div>
