@model IEnumerable<MvcProject.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Identity.UserManager<Microsoft.AspNetCore.Identity.IdentityUser> UserManager

@{
    ViewData["Title"] = "Products";
    var currentUserId = UserManager.GetUserId(User);
    var isAdmin = User.IsInRole("Admin");
}

<h1>Products</h1>

<form method="get" asp-action="Index">
    <input type="text" name="searchName" value="@ViewBag.SearchName" placeholder="Search by name..." />
    <button type="submit">Filter</button>
    <a asp-action="Index">Clear</a>
</form>

<table class="table">
    <thead>
        <tr>
            <!-- Krijojmë një link për renditje sipas emrit -->
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewBag.SortOrder == "name_desc" ? "" : "name_desc")">
                    Name
                </a>
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @if (item.CreatedByUserId == currentUserId || isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <span>|</span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (item.CreatedByUserId == currentUserId || isAdmin)
                    {
                        <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Page @ViewBag.CurrentPage of @ViewBag.TotalPages
    @if(ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-searchName="@ViewBag.SearchName" asp-route-sortOrder="@ViewBag.SortOrder" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
    }
    @if(ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-searchName="@ViewBag.SearchName" asp-route-sortOrder="@ViewBag.SortOrder" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
    }
</div>

<div>
    <a asp-action="Create">Create New</a>
</div>
